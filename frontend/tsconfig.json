{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "baseUrl": ".",
    "paths": {
        "@/components/*": ["src/components/*"],
        "@/lib/*": ["src/lib/*"],
        "@/app/*": ["src/app/*"],
        "@/pages/*": ["src/pages/*"],
        "@/state/*": ["src/state/*"],
        "@/api/*": ["src/api/*"]
    }
  },
  "include": ["src"]
}
